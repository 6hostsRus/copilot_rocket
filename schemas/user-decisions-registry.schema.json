{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Decisions Registry",
  "type": "object",
  "patternProperties": {
    "^.+$": {
      "type": "object",
      "properties": {
        "decision": { "type": "string" },
        "owner": { "type": "string" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["decision"]
    }
  },
  "additionalProperties": true
}
