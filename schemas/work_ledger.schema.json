{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Work Ledger (entry or array of entries)",
  "oneOf": [
    { "$ref": "#/definitions/entry" },
    {
      "type": "array",
      "items": { "$ref": "#/definitions/entry" },
      "minItems": 1
    }
  ],
  "definitions": {
    "entry": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "pattern": "^T-\\d{3,}$" },
        "title": { "type": "string", "minLength": 1 },
        "state": {
          "type": "string",
          "enum": [
            "Todo",
            "In-Progress",
            "Review",
            "Done",
            "Blocked",
            "Needs-Clarification",
            "Waiting"
          ]
        },
        "when": { "type": "string", "format": "date-time" },
        "who": { "type": "string", "minLength": 1 },
        "substeps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "done": { "type": "boolean" }
            },
            "required": ["title", "done"],
            "additionalProperties": false
          }
        },
        "artifacts": {
          "type": "array",
          "items": { "type": "string", "pattern": "^\\./" }
        },
        "refs": {
          "type": "array",
          "items": { "type": "string" }
        },
        "changelog": {
          "type": "object",
          "properties": {
            "what": { "type": "string", "minLength": 1 },
            "why": { "type": "string", "minLength": 1 },
            "risk": { "type": "string", "minLength": 1 }
          },
          "required": ["what", "why", "risk"],
          "additionalProperties": false
        }
      },
      "required": ["id", "title", "changelog"],
      "additionalProperties": false
    }
  }
}
